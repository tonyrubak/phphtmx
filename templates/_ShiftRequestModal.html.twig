<div class="modal-header">
  <h1 class="modal-title fs-5" id="shiftChangeModalLabel">Request Shift Change</h1>
</div>
<div class="modal-body">
  <form hx-post="/shiftRequest" hx-target="#modal-content">
    <div class="mb-3">
      <label for="shiftChangeSelect" class="form-label">Requested shift</label>
      <select id="shiftChangeSelect" class="form-select" name="shift">
        <option value="0530">0530</option>
        <option value="0645">0645</option>
        <option value="0700">0700</option>
      </select>
    </div>
    <input name="employee" type="hidden" value="{{ employee }}"/>
    <input name="formDate" type="hidden" value="{{ date }}"/>
    <input name="requestType" type="hidden" value="CHG"/>
    <button class="btn btn-success" type="submit">Submit</button>
  </form>
</div>
<div class="modal-footer"></div>
